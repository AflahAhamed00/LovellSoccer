<%- include('../partials/adminHeader.ejs')%>
    <%- include('../partials/headerLinks.ejs')%>
        <div class="container">
            <div class="line-break text-center py-4">
                <span class="shadow-heading">Categories</span>
            </div>
            <div class="d-flex flex-column justify-content-center mb-5 pt-4 w-75 mx-auto">
                <% if(details !=null) { %>
                    <table id="dataTable" class="table table-hover cell-border fw-light nowrap">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        
                        <% details.forEach(function(item,i){ %>
                           
                                <tbody>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td class="text-center">
                                            <a  id="editCategory" href="/admin/categories/<%= item._id%>"
                                                onclick="editCategory('<%= item._id%>',event,this)"><i
                                                    class="py-1 fa fa-edit fa-lg text-dark"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                           
                            <% }) %>
                        
                    </table>
                    <% } %>
                        <div class="w-25 mx-auto mt-4">
                            <span class="text-center pb-3" style="font-size: 0.8rem; text-transform: none">
                                <p class="text-danger mt-0 fw-bold text-uppercase">
                                    <%= locals.errorMessage %>
                                </p>
                            </span>
                            <form action="" method="post">
                                <div class="mb-3">
                                    <input type="string" class="form-control" id="form-holder"
                                        placeholder="Enter Category Name" name="category"
                                        style="text-transform: none" />
                                </div>
                                <input type="submit" class="btn btn-dark w-100" value="Add Category" />
                            </form>
                        </div>
            </div>
        </div>
        <%- include('../partials/adminFooter.ejs')%>