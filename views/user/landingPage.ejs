<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%- include("../partials/userHeader.ejs")%>
<section class="offer">
  <div class="container-fluid mb-3 pt-4">
    <div
      id="carouselExampleControls"
      class="carousel slide"
      data-bs-ride="carousel"
    >
      <div class="carousel-inner">
        <%banners.forEach((value,i)=>{%> <%if(i==0){%>
        <div class="carousel-item active">
          <img
            src="/img/banners/<%=value.image%>"
            class="d-block w-100"
            alt="..."
          />
        </div>
        <%} else{%>
        <div class="carousel-item">
          <img
            src="/img/banners/<%=value.image%>"
            class="d-block w-100"
            alt="..."
          />
        </div>
        <%}%> <%})%>
      </div>

      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleControls"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleControls"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</section>
<div class="galanoFont flex justify-center py-10">
  <p class="font-bold text-4xl drop-shadow-md">Top Brands</p>
</div>
<div class="grid grid-cols-3 pt-2">
  <% for (i = 0; i < brand.length; i++) { %>
  <div class="relative cursor-pointer">
    <a href="/brand/<%= brand[i]._id %>">
      <img
        src="/img/brandImage<%= i %>.jpg"
        class="h-3/4 ml-20 pt-3 max-w-lg hover:scale-105 transition-transform transform transition-delay-300"
      />
      <div class="absolute inset-0 flex items-center justify-center">
        <h1
          class="text-2xl font-bold text-white bg-transparent absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
          style="top: 160px;"
        >
          <%= brand[i].name.toLowerCase() %> boots
        </h1>
        <span
          class="text-sm font-bold text-white bg-transparent absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
          style="top: 190px;"
          >shop now</span
        >
      </div>
    </a>
  </div>
  <% } %>
</div>
<style>
  .drop-shadow-md {
    filter: drop-shadow(10px 5px 10px rgba(0, 0, 0, 0.25));
  }
</style>

<%- include("../partials/userFooter.ejs")%>
