<%- include("../partials/userHeader.ejs")%>
<div class="grid grid-cols-3 pt-10">
  <% for (i = 0; i < brand.length; i++) { %>
    <div class="relative cursor-pointer">
      <img src="/img/brandImage<%= i %>.jpg" class="h-3/4 ml-20 pt-5 max-w-lg  rounded-lg hover:scale-105 transition-transform transform transition-delay-300">
      <div class="absolute inset-0 flex items-center justify-center">
          <h1 class="text-2xl font-bold text-white bg-transparent absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" style="top: 160px;">
            <%= brand[i].name.toLowerCase() %> boots
          </h1>
          <span class="text-sm font-bold text-white bg-transparent absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 " style="top: 190px;">shop now</span>
        </div>
    </div>
  <% } %>
</div>

