<%- include("../partials/userHeader.ejs")%>

<div class="bg-white">
    <div class="container-fluid pb-5 pt-30">
        <div class="row px-5">
            <div class="col-lg-7 mb-3 overflow-x-auto">
                <!-- For Billing Address -->
                <div class="col-lg-12  ml-8 mb-4">
                    <h5 class="mb-3  text-gray-900 font-semibold text-2xl">Add New Billing Address</h5>
                    <div class="p-4 w-full bg-white">
                        <form action="" method="post" class="text-left" id="addressForm">
                            <div class="mb-3 flex">
                                <div style="width: 50%;" class="me-1 w-full">
                                    <label for="" class="block text-gray-700">Building Name</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="building">
                                </div>
                                <div style="width: 50%;" class="me-1 w-full">
                                    <label for="" class="block text-gray-700">Mobile No</label>
                                    <input type="number" class="border border-gray-300 rounded-md p-2 w-full" name="mobileNumber" required>
                                </div>
                            </div>
                            <div class="mb-3 flex">
                                <div style="width: 50%;" class="ms-1 w-full">
                                    <label for="" class="block text-gray-700">Zip Code/Pin Code</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="pinCode" required>
                                </div>
                                <!-- <div style="width: 50%;" class="ms-1 w-full">
                                    <label for="" class="block text-gray-700">Locality</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="locality">
                                </div> -->
                            </div>
                            <div class="mb-3">
                                <div class="me-1 w-full">
                                    <label for="" class="block text-gray-700">Address</label>
                                    <textarea type="text" class="border border-gray-300 rounded-md p-2 w-full" name="address" required style="height: 100px;"></textarea>
                                </div>
                            </div>
                            <div class="mb-3 flex">
                                <div style="width: 50%;" class="me-1 w-full">
                                    <label for="" class="block text-gray-700">City</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="city" required>
                                </div>
                                <div style="width: 50%;" class="ms-1 w-full">
                                    <label for="" class="block text-gray-700">State</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="state" required>
                                </div>
                            </div>
                            <div class="mb-3 flex">
                                <!-- <div style="width: 50%;" class="me-1 w-full">
                                    <label for="" class="block text-gray-700">Land Mark</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="land_Mark">
                                </div> -->
                                <div style="width: 50%;" class="me-1 w-full">
                                    <label for="" class="block text-gray-700">Alternative Phone *</label>
                                    <input type="text" class="border border-gray-300 rounded-md p-2 w-full" name="alterMobile">
                                </div>
                            </div>
                            <button type="submit" class="bg-gray-900 text-white p-2 rounded-md">SAVE</button>
                        </form>
                    </div>
                </div>
                <!-- Bill Address add form end  -->
            </div>
        </div>
    </div>
</div>


<%- include("../partials/userFooter.ejs")%>